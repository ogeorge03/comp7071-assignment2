@model Assignment2.Models.ShiftScheduleDetails;

@{
    ViewData["Title"] = "Work History";
}

<h1>Work History</h1>

<h2>Statutory Holidays</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Holiday
            </th>
            <th>
                Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var holiday in (List<Stat_Holidays>)ViewData["statHolidays"])
        {
            <tr>
                <td>
                    @holiday.Holiday
                </td>
                <td>
                    @holiday.DateTime.ToString("yyyy-MM-dd")
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Employee Vacations</h2>
<p>
    <a href="@Url.Action("CreateVacation", new { id = ViewData["id"], supervisorid = ViewData["supervisorid"] })" class="btn btn-primary">Create Vacation</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Vacation Start Date
            </th>
            <th>
                Vacation End Date
            </th>
            <th>
                Supervisor Approved
            </th>
            <th>
                Approved Date
            </th>
            <th>
                Paid Vacation
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var holiday in (List<Employee_Vacation>)ViewData["vacations"])
        {
            <tr>
                <td>
                    @holiday.Vacation_Start_Date.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @holiday.Vacation_End_Date.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @(holiday.Is_SuperVisor_Approved ? "Yes" : "No")
                </td>
                <td>
                    @holiday.Approval_Date?.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @(holiday.Is_Paid_Vacation ? "Yes" : "No")
                </td>
                <td>
                    <a href="@Url.Action("EditVacation", new { id = @holiday.Id + 1 })" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Employee Sick Leaves</h2>
<p>
    <a href="@Url.Action("CreateSickLeave", new { id = ViewData["id"] })" class="btn btn-primary">Create Sick Leave</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sick Day
            </th>
            <th>
                Doctor's Note
            </th>
            <th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sickDay in (List<Employee_Sick_Leave>)ViewData["sickLeave"])
        {
            <tr>
                <td>
                    @sickDay.Sick_Day.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @sickDay.Doctors_Note
                </td>
                <td>
                    <a href="@Url.Action("EditSickLeave", new { id = @sickDay.EmployeeId, sick_day = @sickDay.Sick_Day })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("DeleteSickLeave", new { id = @sickDay.EmployeeId, sick_day = @sickDay.Sick_Day })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
