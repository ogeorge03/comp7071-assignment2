@model IEnumerable<Assignment2.Models.CustomerServiceScheduleDetails>


@{
    ViewData["Title"] = "View Scheduled Services";
}

<h1>Customer Services</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Description
            </th>
            <th>
                Hourly Rate
            </th>
            <th>
                Certification Authority
            </th>
            <th>
                Certification Description
            </th>
            <th>
                Scheduled Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourlyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CertificationAuthority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CertificationDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduledDateTime)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
