@model IEnumerable<Assignment2.Models.Payroll>

@{
    ViewData["Title"] = "Index";
}

<h1>Payroll Index</h1>

<table class="table">
    <a asp-action="Create" asp-route-id="@ViewData["employeeid"]" class="btn btn-primary">Create new payroll</a>
    <thead>
        <tr>
            <th>
                Processed Datetime
            </th>
            <th>
                Regular Pay
            </th>
            <th>
                Overtime Pay
            </th>
            <th>
                Vacation Pay
            </th>
            <th>
                Tax
            </th>
            <th>
                Payroll Adjustment
            </th>
            <th>
                Adjustment Reason
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Direct Deposit
            </th>
            <th>
                Check Number
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Processed_Datetime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Regular_Pay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Overtime_Pay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vacation_Pay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tax_Withheld)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payroll_Adjustment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adjustment_Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pay_Period_Start_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pay_Period_End_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direct_Deposit_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Check_Number)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-employeeid="@ViewData["employeeid"]" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-employeeid="@ViewData["employeeid"]" class="btn btn-danger">Delete</a>
                </td>
            </tr>    
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Employees" class="btn btn-secondary">Back to list</a>
</div>
