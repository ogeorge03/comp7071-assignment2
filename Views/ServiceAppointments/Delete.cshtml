@model Assignment2.Models.ServiceAppointment

@{
    ViewData["Title"] = "Delete Service Appointment";
}

<h1>Delete Service Appointment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Service Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.First_Name @Model.Customer.Last_Name
        </dd>
        <dt class="col-sm-2">
            Service
        </dt>
        <dd class="col-sm-10">
            @Model.Service.Description
        </dd>
        <dt class="col-sm-2">
            Appointment Date
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
