@model Assignment2.Models.Customer_Service_Scheduled

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer_Service_Scheduled</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Scheduled_DateTime" class="control-label"></label>
                <input asp-for="Scheduled_DateTime" class="form-control" />
                <span asp-validation-for="Scheduled_DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rendered_DateTime" class="control-label"></label>
                <input asp-for="Rendered_DateTime" class="form-control" />
                <span asp-validation-for="Rendered_DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service_Fee" class="control-label"></label>
                <input asp-for="Service_Fee" class="form-control" />
                <span asp-validation-for="Service_Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Satisfaction_Rating" class="control-label"></label>
                <input asp-for="Customer_Satisfaction_Rating" class="form-control" />
                <span asp-validation-for="Customer_Satisfaction_Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer" class="control-label">Customer</label>
                @* The dropdown list: *@
                @Html.DropDownListFor(model => model.Customer, (SelectList)ViewBag.CustomerId, "Select First_Name", new { @class = "form-control" })
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Customer_Service" class="control-label">Customer Service</label>
                @* The dropdown list: *@
                @Html.DropDownListFor(model => model.Customer_Service, (SelectList)ViewBag.Customer_ServiceId, "Select Description", new { @class = "form-control" })
                <span asp-validation-for="Customer_Service" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
